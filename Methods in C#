// approach - 1
using System;
class Program
{
    public static void Main()
    {
        Program p = new Program();
        p.EvenNumber();
    }
    
    public void EvenNumber()
    {
        int Start = 0;

        while (Start <= 20)
        {
            Console.WriteLine(Start);
            Start = Start + 2;
        }
    }
}

